    "angular-route": "^1.6.2",
    "angular-ui-router": "^0.4.2",
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "crypto-js": "^3.1.9-1",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "express-session": "^1.15.1",
    "mdi": "^1.8.36",
    "mongodb": "^2.2.22",
    "mongoose": "^4.8.1",
    "morgan": "~1.7.0",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
